<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="6dip"
    android:background="#eeeeee">

    <TextView
        android:id="@+id/first_line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:gravity="center_vertical"
        android:text="Example application"
        android:textColor="#5e1b2c"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/hari"
        android:layout_width="wrap_content"
        android:layout_height="26dip"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/first_line"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="hari"
        android:textColor="#555555" />


    <TextView
        android:id="@+id/first_dosen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/hari"
        android:text="DOSEN 1"
        android:ellipsize="marquee"
        android:textColor="#555555"/>

    <TextView
        android:id="@+id/second_dosen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hari"
        android:layout_marginStart="17dp"
        android:layout_toEndOf="@+id/first_dosen"
        android:text="DOSEN 2"
        android:ellipsize="marquee"
        android:textColor="#555555" />

    <TextView
        android:id="@+id/waktu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_line"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/hari"
        android:text="waktu"
        android:textColor="#555555" />

</RelativeLayout>